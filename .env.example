# Gemini Claude Adapter Configuration (Enhanced v2.1.0)
# ==========================================================

# =============================================
# Service Configuration
# =============================================
SERVICE_ENVIRONMENT=development
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
SERVICE_WORKERS=1
SERVICE_LOG_LEVEL=INFO
SERVICE_ENABLE_METRICS=true
SERVICE_ENABLE_HEALTH_CHECK=true
SERVICE_CORS_ORIGINS=*

# =============================================
# Gemini API Configuration
# =============================================
# Multiple API keys separated by commas (get from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEYS=AIzaSyBt3JTEUjrNFb392jP-2...,AIzaSyBsfnqmf7hCNA8â€¦.,AIzaSyB_ic4AmBCWeFGnhV4W...

# Optional proxy for API calls
# GEMINI_PROXY_URL=http://proxy.example.com:8080

# Key management settings
GEMINI_MAX_FAILURES=3
GEMINI_COOLING_PERIOD=300
GEMINI_HEALTH_CHECK_INTERVAL=60
GEMINI_REQUEST_TIMEOUT=45
GEMINI_MAX_RETRIES=2

# =============================================
# Security Configuration
# =============================================
# Client API keys for authentication (comma-separated)
ADAPTER_API_KEYS=your-client-key

# Admin API keys for management endpoints (comma-separated)
ADMIN_API_KEYS=your-admin-key

# Security features
SECURITY_ENABLE_IP_BLOCKING=true
SECURITY_MAX_FAILED_ATTEMPTS=5
SECURITY_BLOCK_DURATION=300
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=60

# =============================================
# Performance Optimization Settings
# =============================================
CACHE_ENABLED=true
PERF_HTTP2_ENABLED=true
SERVICE_ENABLE_METRICS=true

# =============================================
# Cache Configuration
# =============================================
CACHE_ENABLED=true
CACHE_MAX_SIZE=1000
CACHE_TTL=300
CACHE_KEY_PREFIX=gemini_adapter

# =============================================
# Performance Configuration
# =============================================
PERF_MAX_KEEPALIVE_CONNECTIONS=20
PERF_MAX_CONNECTIONS=100
PERF_KEEPALIVE_EXPIRY=30.0
PERF_CONNECT_TIMEOUT=10.0
PERF_READ_TIMEOUT=45.0
PERF_WRITE_TIMEOUT=10.0
PERF_POOL_TIMEOUT=5.0
PERF_HTTP2_ENABLED=true

# =============================================
# Database Configuration (Optional)
# =============================================
# Redis for distributed caching (optional)
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0
# REDIS_MAX_CONNECTIONS=10

# =============================================
# Legacy Configuration (for backward compatibility)
# =============================================
# These will be used if new configuration is not available
# PROXY_URL=
# MAX_FAILURES=3
# COOLING_PERIOD=300
# HEALTH_CHECK_INTERVAL=60
# REQUEST_TIMEOUT=45
# MAX_RETRIES=0