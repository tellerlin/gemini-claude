# =============================================
# Service Configuration (SERVICE)
# =============================================
# Runtime environment (development / production)
SERVICE__ENVIRONMENT=production
# Host to bind to, 0.0.0.0 listens on all network interfaces
SERVICE__HOST=0.0.0.0
# Service port inside the container, 8000 is recommended
SERVICE__PORT=8000
# Log level (DEBUG, INFO, WARNING, ERROR)
SERVICE__LOG_LEVEL=INFO
# Enable performance metrics collection (/metrics endpoint)
SERVICE__ENABLE_METRICS=true
# Enable health check endpoint (/health endpoint)
SERVICE__ENABLE_HEALTH_CHECK=true

# =============================================
# Gemini API Configuration (GEMINI) - [REQUIRED]
# =============================================
# ‼️ [REQUIRED] Replace this value with your own Gemini API keys, separated by commas
GEMINI__API_KEYS=your-google-ai-api-key-1,your-google-ai-api-key-2

# (Optional) Set a proxy URL for Gemini API calls if needed, otherwise leave it empty
GEMINI__PROXY_URL=

# (Optional) Other advanced Gemini settings
GEMINI__MAX_FAILURES=3
GEMINI__COOLING_PERIOD=300
GEMINI__REQUEST_TIMEOUT=45
GEMINI__MAX_RETRIES=2

# =============================================
# Security Configuration (SECURITY) - [REQUIRED]
# =============================================
# ‼️ [REQUIRED] Generate and replace this with your own secure keys, separated by commas
# Recommended command to generate a key: openssl rand -hex 32
SECURITY__ADAPTER_API_KEYS=your-secure-client-key

# (Recommended) Admin keys for management endpoints, separated by commas
SECURITY__ADMIN_API_KEYS=your-secure-admin-key

# (Optional) IP blocking and rate limiting features
SECURITY__ENABLE_IP_BLOCKING=true
SECURITY__MAX_FAILED_ATTEMPTS=10
SECURITY__BLOCK_DURATION=600
SECURITY__ENABLE_RATE_LIMITING=true
SECURITY__RATE_LIMIT_REQUESTS=100
SECURITY__RATE_LIMIT_WINDOW=60

# =============================================
# Performance Optimization (PERFORMANCE & CACHE)
# =============================================
# Cache Configuration
CACHE__ENABLED=true
CACHE__MAX_SIZE=1000
CACHE__TTL=300

# HTTP Client Performance Configuration
PERFORMANCE__MAX_KEEPALIVE_CONNECTIONS=50
PERFORMANCE__MAX_CONNECTIONS=200
PERFORMANCE__KEEPALIVE_EXPIRY=60.0
PERFORMANCE__CONNECT_TIMEOUT=5.0
PERFORMANCE__READ_TIMEOUT=30.0
PERFORMANCE__HTTP2_ENABLED=true
PERFORMANCE__WRITE_TIMEOUT=10.0
PERFORMANCE__POOL_TIMEOUT=2.0
PERFORMANCE__TRUST_ENV=true

# =============================================
# (Optional) Redis Database Configuration (DATABASE)
# =============================================
# If you need to use Redis for distributed caching, uncomment and configure the following lines
# DATABASE__REDIS_URL=redis://localhost:6379/0
# DATABASE__REDIS_PASSWORD=
# DATABASE__REDIS_DB=0
